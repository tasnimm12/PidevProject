<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="tn.esprit.controllers.ClientAssurancesController"
           prefHeight="800" prefWidth="1400" styleClass="gradient-background"
           stylesheets="@../styles/style.css">
    
    <VBox spacing="20" alignment="TOP_CENTER">
        <padding>
            <Insets top="20" right="30" bottom="30" left="30"/>
        </padding>
        
        <!-- Navigation Bar -->
        <HBox styleClass="nav-bar" spacing="30" alignment="CENTER_LEFT" prefHeight="60">
            <padding>
                <Insets left="20" right="20"/>
            </padding>
            
            <!-- Logo -->
            <HBox spacing="10" alignment="CENTER_LEFT" onMouseClicked="#handleBackToDashboard" style="-fx-cursor: hand;">
                <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                    <image>
                        <Image url="@/images/logo.png"/>
                    </image>
                </ImageView>
                <Label text="Credix" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- User Menu -->
            <HBox spacing="15" alignment="CENTER">
                <MenuButton text="Navigation" styleClass="nav-button"
                           style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 8;">
                    <items>
                        <MenuItem text="ðŸ  Dashboard" onAction="#handleBackToDashboard"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="ðŸ’³ My Accounts" onAction="#handleMyAccountsClick"/>
                        <MenuItem text="ðŸ’° My Expenses" onAction="#handleMyExpensesClick"/>
                        <MenuItem text="ðŸ’µ My Credits" onAction="#handleMyCreditsClick"/>
                        <MenuItem text="â†©ï¸ My Remboursements" onAction="#handleMyRemboursementsClick"/>
                        <MenuItem text="ðŸ“‹ My Abonnement" onAction="#handleUserAbonnementClick"/>
                        <MenuItem text="ðŸ›¡ï¸ My Assurances"/>
                    </items>
                </MenuButton>
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Label fx:id="userNameLabel" text="Your Name" 
                           style="-fx-font-weight: 600; -fx-font-size: 13; -fx-text-fill: #2d3748;"/>
                    <Label fx:id="userRoleLabel" text="Client" 
                           style="-fx-font-size: 11; -fx-text-fill: #a0aec0;"/>
                </VBox>
                <Button text="Logout" styleClass="logout-button" onAction="#handleLogout"/>
            </HBox>
        </HBox>
        
        <!-- Content -->
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <VBox spacing="30" alignment="TOP_CENTER" prefWidth="900">
            
            <!-- Title -->
            <Label text="Insurance Policies" 
                   style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
            
            <!-- My Active Assurances Section -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">
                <Label text="My Active Policies" 
                       style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Separator/>
                <VBox fx:id="myAssurancesContainer" spacing="15" style="-fx-background-color: transparent;"/>
                <Label fx:id="noActiveLabel" text="You don't have any active insurance policies yet." 
                       style="-fx-font-size: 13; -fx-text-fill: #a0aec0; -fx-padding: 20;" visible="false"/>
            </VBox>
            
            <!-- Available Assurances Section -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">
                <Label text="Available Insurance Policies" 
                       style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Subscribe to insurance policies by creating a contract" 
                       style="-fx-font-size: 13; -fx-text-fill: #a0aec0;"/>
                <Separator/>
                <FlowPane fx:id="availableAssurancesContainer" hgap="20" vgap="20" 
                         style="-fx-background-color: transparent;"/>
            </VBox>
            
        </VBox>
        </ScrollPane>
        
    </VBox>
    
</StackPane>

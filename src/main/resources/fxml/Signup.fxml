<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="tn.esprit.controllers.SignupController"
           prefHeight="800" prefWidth="1000" styleClass="gradient-background"
           stylesheets="@../styles/style.css">
    
    <VBox alignment="CENTER" spacing="0" maxWidth="500" maxHeight="750">
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                   style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox styleClass="login-container" spacing="25" alignment="CENTER">
            
            <!-- Logo and Title -->
            <VBox alignment="CENTER" spacing="15">
                <!-- Credix Logo -->
                <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                    <image>
                        <Image url="@/images/logo.png"/>
                    </image>
                </ImageView>
                <Label text="Credix" style="-fx-font-size: 38; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
                <Label text="Create Account!" style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Get started with your free account" styleClass="subtitle-text"/>
            </VBox>
            
            <!-- Signup Form -->
            <VBox spacing="18">
                <!-- Name Fields Row -->
                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="First Name" styleClass="form-label"/>
                        <TextField fx:id="prenomField" promptText="First name" 
                                  styleClass="modern-text-field" prefHeight="50"/>
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Last Name" styleClass="form-label"/>
                        <TextField fx:id="nomField" promptText="Last name" 
                                  styleClass="modern-text-field" prefHeight="50"/>
                    </VBox>
                </HBox>
                
                <!-- Email Field -->
                <VBox spacing="8">
                    <Label text="Email Address" styleClass="form-label"/>
                    <TextField fx:id="emailField" promptText="Enter your email" 
                              styleClass="modern-text-field" prefHeight="50"/>
                </VBox>
                
                <!-- Phone Field -->
                <VBox spacing="8">
                    <Label text="Phone Number" styleClass="form-label"/>
                    <TextField fx:id="telephoneField" promptText="Enter your phone" 
                              styleClass="modern-text-field" prefHeight="50"/>
                </VBox>
                
                <!-- Date of Birth -->
                <VBox spacing="8">
                    <Label text="Date of Birth" styleClass="form-label"/>
                    <DatePicker fx:id="dateNaissancePicker" promptText="Select date" 
                               styleClass="modern-text-field" prefHeight="50" maxWidth="Infinity"/>
                </VBox>
                
                <!-- Role Selection -->
                <VBox spacing="8">
                    <Label text="Account Type" styleClass="form-label"/>
                    <ComboBox fx:id="roleComboBox" promptText="Select role" 
                             styleClass="modern-combo-box" prefHeight="50" maxWidth="Infinity"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField" promptText="Create password" 
                                  styleClass="modern-password-field" prefHeight="50"/>
                </VBox>
                
                <!-- Confirm Password -->
                <VBox spacing="8">
                    <Label text="Confirm Password" styleClass="form-label"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" 
                                  styleClass="modern-password-field" prefHeight="50"/>
                </VBox>
                
                <!-- Error/Success Label -->
                <Label fx:id="messageLabel" styleClass="error-label" visible="false" 
                       wrapText="true" textAlignment="CENTER"/>
                
                <!-- Terms Checkbox -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <CheckBox fx:id="termsCheckbox" 
                             style="-fx-text-fill: #4a5568; -fx-font-size: 12;"/>
                    <Label text="I agree to the Terms and Conditions" 
                           style="-fx-text-fill: #4a5568; -fx-font-size: 12;"/>
                </HBox>
                
                <!-- Sign Up Button -->
                <Button fx:id="signupButton" text="Create Account" styleClass="primary-button" 
                        maxWidth="Infinity" prefHeight="50" onAction="#handleSignup"/>
                
                <!-- Login Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" 
                           style="-fx-text-fill: #718096; -fx-font-size: 14;"/>
                    <Button text="Sign In" styleClass="link-button" onAction="#handleLoginNavigation"/>
                </HBox>
            </VBox>
            
        </VBox>
        </ScrollPane>
    </VBox>
    
</StackPane>

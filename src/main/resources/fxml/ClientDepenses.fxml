<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="tn.esprit.controllers.ClientDepensesController"
           prefHeight="800" prefWidth="1400" styleClass="gradient-background"
           stylesheets="@../styles/style.css">
    
    <VBox spacing="20" alignment="TOP_CENTER">
        <padding>
            <Insets top="20" right="30" bottom="30" left="30"/>
        </padding>
        
        <!-- Navigation Bar -->
        <HBox styleClass="nav-bar" spacing="30" alignment="CENTER_LEFT" prefHeight="60">
            <padding>
                <Insets left="20" right="20"/>
            </padding>
            
            <!-- Logo -->
            <HBox spacing="10" alignment="CENTER_LEFT" onMouseClicked="#handleBackToDashboard" style="-fx-cursor: hand;">
                <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                    <image>
                        <Image url="@/images/logo.png"/>
                    </image>
                </ImageView>
                <Label text="Credix" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- User Menu -->
            <HBox spacing="15" alignment="CENTER">
                <MenuButton text="Navigation" styleClass="nav-button"
                           style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 8;">
                    <items>
                        <MenuItem text="ðŸ  Dashboard" onAction="#handleBackToDashboard"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="ðŸ’³ My Accounts" onAction="#handleMyAccountsClick"/>
                        <MenuItem text="ðŸ’° My Expenses"/>
                        <MenuItem text="ðŸ’µ My Credits" onAction="#handleMyCreditsClick"/>
                        <MenuItem text="â†©ï¸ My Remboursements" onAction="#handleMyRemboursementsClick"/>
                        <MenuItem text="ðŸ“‹ My Abonnement" onAction="#handleMyAbonnementClick"/>
                        <MenuItem text="ðŸ›¡ï¸ My Assurances" onAction="#handleMyAssurancesClick"/>
                    </items>
                </MenuButton>
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Label fx:id="headerUserNameLabel" text="Your Name" 
                           style="-fx-font-weight: 600; -fx-font-size: 13; -fx-text-fill: #2d3748;"/>
                    <Label fx:id="headerUserRoleLabel" text="Client" 
                           style="-fx-font-size: 11; -fx-text-fill: #a0aec0;"/>
                </VBox>
                <Button text="Logout" styleClass="logout-button" onAction="#handleLogout"/>
            </HBox>
        </HBox>
        
        <!-- Content -->
        <VBox spacing="30" alignment="TOP_CENTER" prefWidth="1200" VBox.vgrow="ALWAYS">
            
            <!-- Header -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="My Expenses" 
                       style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: black;"/>
                <Label text="Track and manage your spending" 
                       style="-fx-font-size: 14; -fx-text-fill: grey;"/>
            </VBox>
            
            <!-- Stats Cards -->
            <HBox spacing="20" alignment="CENTER">
                <VBox styleClass="card" spacing="10" alignment="CENTER" prefWidth="250" prefHeight="120">
                    <Label text="Total Expenses" style="-fx-font-size: 13; -fx-text-fill: grey; -fx-font-weight: 600;"/>
                    <Label fx:id="totalExpensesLabel" text="0.00" 
                           style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: red;"/>
                </VBox>
                
                <VBox styleClass="card" spacing="10" alignment="CENTER" prefWidth="250" prefHeight="120">
                    <Label text="This Month" style="-fx-font-size: 13; -fx-text-fill: grey; -fx-font-weight: 600;"/>
                    <Label fx:id="monthExpensesLabel" text="0.00" 
                           style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: orange;"/>
                </VBox>
                
                <VBox styleClass="card" spacing="10" alignment="CENTER" prefWidth="250" prefHeight="120">
                    <Label text="Total Transactions" style="-fx-font-size: 13; -fx-text-fill: grey; -fx-font-weight: 600;"/>
                    <Label fx:id="countLabel" text="0" 
                           style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: blue;"/>
                </VBox>
            </HBox>
            
            <!-- Filters -->
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="card" style="-fx-padding: 20;">
                <Label text="Filter:" style="-fx-font-size: 14; -fx-font-weight: 600; -fx-text-fill: black;"/>
                <TextField fx:id="searchField" promptText="Search description..." 
                          styleClass="modern-text-field" prefWidth="300"/>
                <ComboBox fx:id="categoryFilter" promptText="Category" 
                         styleClass="modern-combo-box" prefWidth="150"/>
                <ComboBox fx:id="modeFilter" promptText="Payment Mode" 
                         styleClass="modern-combo-box" prefWidth="150"/>
                <Region HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="sortComboBox" promptText="Sort by" 
                         styleClass="modern-combo-box" prefWidth="150"/>
            </HBox>
            
            <!-- Expenses Table -->
            <VBox styleClass="card" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">
                <ScrollPane fitToWidth="true" fitToHeight="true" 
                           style="-fx-background: transparent; -fx-background-color: transparent;">
                    <VBox fx:id="expensesContainer" spacing="12" style="-fx-padding: 10;"/>
                </ScrollPane>
            </VBox>
            
        </VBox>
        
    </VBox>
    
</StackPane>

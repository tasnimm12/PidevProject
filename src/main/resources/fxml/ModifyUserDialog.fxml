<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.ModifyUserDialogController"
      spacing="20" style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 15;"
      prefWidth="500" stylesheets="@../styles/style.css">
    
    <!-- Title -->
    <Label text="Modify User" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
    
    <!-- Form -->
    <GridPane hgap="15" vgap="15">
        
        <!-- First Name -->
        <Label text="First Name" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="prenomField" promptText="Enter first name" 
                  styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <!-- Last Name -->
        <Label text="Last Name" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="nomField" promptText="Enter last name" 
                  styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <!-- Email -->
        <Label text="Email" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="emailField" promptText="Enter email" 
                  styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <!-- Phone -->
        <Label text="Phone" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="telephoneField" promptText="Enter phone" 
                  styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <!-- Date of Birth -->
        <Label text="Date of Birth" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <DatePicker fx:id="dateNaissancePicker" promptText="Select date" 
                   styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <!-- Role -->
        <Label text="Role" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <ComboBox fx:id="roleComboBox" promptText="Select role" 
                 styleClass="modern-combo-box" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <!-- Password (Optional) -->
        <Label text="New Password" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <PasswordField fx:id="passwordField" promptText="Leave empty to keep current" 
                      styleClass="modern-password-field" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        
        <!-- Status -->
        <Label text="Status" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <ComboBox fx:id="statusComboBox" promptText="Select status" 
                 styleClass="modern-combo-box" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        
    </GridPane>
    
    <!-- Error Message -->
    <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" visible="false"/>
    
    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Cancel" styleClass="secondary-button" prefHeight="45" prefWidth="120" onAction="#handleCancel"/>
        <Button text="Update" styleClass="primary-button" prefHeight="45" prefWidth="120" onAction="#handleUpdate"/>
    </HBox>
    
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.ViewAbonnementSubscriptionsDialogController"
      spacing="20" style="-fx-padding: 30; -fx-background-color: #f7fafc;" 
      prefWidth="900" prefHeight="650">
    
    <VBox spacing="10">
        <Label fx:id="abonnementTitleLabel" text="Abonnement Subscriptions" 
               style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
        <Label fx:id="abonnementInfoLabel" text="Plan details" 
               style="-fx-font-size: 13; -fx-text-fill: #718096;"/>
    </VBox>
    
    <Separator/>
    
    <!-- Search and Filter -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search by user name or email..." 
                  styleClass="modern-text-field" prefWidth="400" prefHeight="40"/>
        <ComboBox fx:id="statusFilter" promptText="Filter by Status" 
                 styleClass="modern-combo-box" prefHeight="40" prefWidth="150"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="countLabel" text="0 subscriptions" 
               style="-fx-font-size: 13; -fx-text-fill: #718096; -fx-font-weight: 600;"/>
    </HBox>
    
    <!-- Subscriptions Table -->
    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" 
               VBox.vgrow="ALWAYS">
        <VBox fx:id="subscriptionsContainer" spacing="12" style="-fx-padding: 10;"/>
    </ScrollPane>
    
    <!-- Close Button -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose" prefWidth="120" prefHeight="40"
                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>
    
</VBox>

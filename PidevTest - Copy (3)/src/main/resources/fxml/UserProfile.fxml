<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="tn.esprit.controllers.UserProfileController"
           prefHeight="800" prefWidth="1400" styleClass="gradient-background"
           stylesheets="@../styles/style.css">
    
    <VBox spacing="20" alignment="TOP_CENTER">
        <padding>
            <Insets top="20" right="30" bottom="20" left="30"/>
        </padding>
        
        <!-- Navigation Bar -->
        <HBox styleClass="nav-bar" spacing="30" alignment="CENTER_LEFT" prefHeight="60">
            <padding>
                <Insets left="20" right="20"/>
            </padding>
            
            <!-- Logo -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                    <image>
                        <Image url="@/images/logo.png"/>
                    </image>
                </ImageView>
                <Label text="Credix" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Back Button -->
            <Button text="Back to Dashboard" styleClass="secondary-button" onAction="#handleBackToDashboard"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- User Info -->
            <HBox spacing="15" alignment="CENTER">
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Label fx:id="headerUserNameLabel" text="Your Name" 
                           style="-fx-font-weight: 600; -fx-font-size: 13; -fx-text-fill: #2d3748;"/>
                    <Label fx:id="headerUserRoleLabel" text="Client" 
                           style="-fx-font-size: 11; -fx-text-fill: #a0aec0;"/>
                </VBox>
                <Button text="Logout" styleClass="logout-button" onAction="#handleLogout"/>
            </HBox>
        </HBox>
        
        <!-- Profile Content -->
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <VBox spacing="30" alignment="TOP_CENTER" prefWidth="800">
            
            <!-- Profile Header -->
            <VBox spacing="15" alignment="CENTER" styleClass="card" style="-fx-padding: 40;">
                <StackPane prefWidth="120" prefHeight="120" 
                          style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2); -fx-background-radius: 60;">
                    <Label fx:id="avatarLabel" text="UN" 
                           style="-fx-text-fill: white; -fx-font-size: 36; -fx-font-weight: bold;"/>
                </StackPane>
                <Label fx:id="profileNameLabel" text="User Name" 
                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label fx:id="profileEmailLabel" text="user@example.com" 
                       style="-fx-font-size: 14; -fx-text-fill: #a0aec0;"/>
            </VBox>
            
            <!-- Profile Form -->
            <VBox spacing="25" styleClass="card" style="-fx-padding: 40;">
                <Label text="Account Information" 
                       style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                
                <GridPane hgap="20" vgap="20">
                    
                    <!-- First Name -->
                    <Label text="First Name" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="prenomField" promptText="Enter first name" 
                              styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <!-- Last Name -->
                    <Label text="Last Name" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="nomField" promptText="Enter last name" 
                              styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <!-- Email -->
                    <Label text="Email" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="emailField" promptText="Enter email" 
                              styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <!-- Phone -->
                    <Label text="Phone" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="telephoneField" promptText="Enter phone" 
                              styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <!-- Date of Birth -->
                    <Label text="Date of Birth" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <DatePicker fx:id="dateNaissancePicker" promptText="Select date" 
                               styleClass="modern-text-field" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                </GridPane>
                
                <!-- Change Password Section -->
                <Separator style="-fx-padding: 10 0;"/>
                
                <Label text="Change Password" 
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                
                <GridPane hgap="20" vgap="20">
                    
                    <!-- Current Password -->
                    <Label text="Current Password" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <PasswordField fx:id="currentPasswordField" promptText="Enter current password" 
                                  styleClass="modern-password-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <!-- New Password -->
                    <Label text="New Password" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <PasswordField fx:id="newPasswordField" promptText="Enter new password (min 6 characters)" 
                                  styleClass="modern-password-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <!-- Confirm New Password -->
                    <Label text="Confirm Password" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" 
                                  styleClass="modern-password-field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                </GridPane>
                
                <!-- Error Message -->
                <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" visible="false"/>
                
                <!-- Action Buttons -->
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Cancel" styleClass="secondary-button" prefHeight="45" prefWidth="150" onAction="#handleCancel"/>
                    <Button text="Save Changes" styleClass="primary-button" prefHeight="45" prefWidth="150" onAction="#handleSaveChanges"/>
                </HBox>
                
            </VBox>
            
        </VBox>
        </ScrollPane>
        
    </VBox>
    
</StackPane>

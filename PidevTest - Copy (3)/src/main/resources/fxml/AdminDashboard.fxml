<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="tn.esprit.controllers.AdminDashboardController"
           prefHeight="800" prefWidth="1400" styleClass="gradient-background"
           stylesheets="@../styles/style.css">
    
    <VBox spacing="20" alignment="TOP_CENTER">
        <padding>
            <Insets top="20" right="30" bottom="30" left="30"/>
        </padding>
        
        <!-- Navigation Bar -->
        <HBox styleClass="nav-bar" spacing="15" alignment="CENTER_LEFT" prefHeight="60">
            <padding>
                <Insets left="20" right="20"/>
            </padding>
            
            <!-- Logo -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                    <image>
                        <Image url="@/images/logo.png"/>
                    </image>
                </ImageView>
                <Label text="Credix" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Navigation Buttons -->
            <Button fx:id="dashboardBtn" text="Dashboard" styleClass="nav-button, nav-button-active" onAction="#showDashboard" 
                   style="-fx-font-size: 11; -fx-padding: 6 10;"/>
            <Button fx:id="usersBtn" text="Users" styleClass="nav-button" onAction="#showUsers" 
                   style="-fx-font-size: 11; -fx-padding: 6 10;"/>
            <Button fx:id="abonnementsBtn" text="Abonnements" styleClass="nav-button" onAction="#showAbonnements" 
                   style="-fx-font-size: 11; -fx-padding: 6 10;"/>
            <Button fx:id="assurancesBtn" text="Assurances" styleClass="nav-button" onAction="#showAssurances" 
                   style="-fx-font-size: 11; -fx-padding: 6 10;"/>
            <Button fx:id="contratsBtn" text="Contrats" styleClass="nav-button" onAction="#showContrats" 
                   style="-fx-font-size: 11; -fx-padding: 6 10;"/>
            <Button fx:id="projetsBtn" text="Projets" styleClass="nav-button" onAction="#showProjets" 
                   style="-fx-font-size: 11; -fx-padding: 6 10;"/>
            <Button fx:id="investissementsBtn" text="Investissements" styleClass="nav-button" onAction="#showInvestissements" 
                   style="-fx-font-size: 11; -fx-padding: 6 10;"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Admin Info -->
            <HBox spacing="15" alignment="CENTER">
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Label fx:id="adminNameLabel" text="Admin Name" 
                           style="-fx-font-weight: 600; -fx-font-size: 13; -fx-text-fill: #2d3748;"/>
                    <Label text="Administrator" 
                           style="-fx-font-size: 11; -fx-text-fill: #667eea; -fx-font-weight: 600;"/>
                </VBox>
                <StackPane prefWidth="40" prefHeight="40" style="-fx-background-color: #764ba2; -fx-background-radius: 20; -fx-border-color: #ffffff; -fx-border-width: 2; -fx-border-radius: 20;"/>
                <Button text="Logout" styleClass="link-button" onAction="#handleLogout" 
                       style="-fx-font-size: 12;"/>
            </HBox>
        </HBox>
        
        <!-- Content Area with StackPane for View Switching -->
        <StackPane VBox.vgrow="ALWAYS">
            
            <!-- Dashboard View -->
            <VBox fx:id="dashboardView" spacing="25" style="-fx-padding: 20;">
                
                <!-- Stats Row 1 -->
                <HBox spacing="25">
                    <VBox styleClass="gradient-card" spacing="15" prefHeight="150" prefWidth="300">
                        <Label text="Total Users" styleClass="white-text" 
                               style="-fx-font-size: 14; -fx-font-weight: 500;"/>
                        <Label fx:id="totalUsersLabel" text="0" styleClass="white-text" 
                               style="-fx-font-size: 36; -fx-font-weight: bold;"/>
                        <Label text="Active accounts" styleClass="white-text" 
                               style="-fx-font-size: 12; -fx-opacity: 0.8;"/>
                    </VBox>
                    
                    <VBox styleClass="card" spacing="15" prefHeight="150" prefWidth="300">
                        <Label text="Bank Accounts" 
                               style="-fx-font-size: 14; -fx-font-weight: 500; -fx-text-fill: #4a5568;"/>
                        <Label fx:id="totalAccountsLabel" text="0" 
                               style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                        <Label text="Total accounts" 
                               style="-fx-font-size: 12; -fx-text-fill: #a0aec0;"/>
                    </VBox>
                    
                    <VBox styleClass="card" spacing="15" prefHeight="150" prefWidth="300">
                        <Label text="Projects" 
                               style="-fx-font-size: 14; -fx-font-weight: 500; -fx-text-fill: #4a5568;"/>
                        <Label fx:id="totalProjectsLabel" text="0" 
                               style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                        <Label text="Active projects" 
                               style="-fx-font-size: 12; -fx-text-fill: #a0aec0;"/>
                    </VBox>
                </HBox>
                
                <!-- Stats Row 2 -->
                <HBox spacing="25">
                    <VBox styleClass="card" spacing="15" prefHeight="150" prefWidth="300">
                        <Label text="Total Balance" 
                               style="-fx-font-size: 14; -fx-font-weight: 500; -fx-text-fill: #4a5568;"/>
                        <Label fx:id="totalBalanceLabel" text="0.00" 
                               style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #48bb78;"/>
                        <Label text="All accounts combined" 
                               style="-fx-font-size: 12; -fx-text-fill: #a0aec0;"/>
                    </VBox>
                    
                    <VBox styleClass="card" spacing="15" prefHeight="150" prefWidth="300">
                        <Label text="Subscriptions" 
                               style="-fx-font-size: 14; -fx-font-weight: 500; -fx-text-fill: #4a5568;"/>
                        <Label fx:id="totalSubscriptionsLabel" text="0" 
                               style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                        <Label text="Active subscriptions" 
                               style="-fx-font-size: 12; -fx-text-fill: #a0aec0;"/>
                    </VBox>
                    
                    <VBox styleClass="card" spacing="15" prefHeight="150" prefWidth="300">
                        <Label text="Insurance" 
                               style="-fx-font-size: 14; -fx-font-weight: 500; -fx-text-fill: #4a5568;"/>
                        <Label fx:id="totalInsuranceLabel" text="0" 
                               style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                        <Label text="Active policies" 
                               style="-fx-font-size: 12; -fx-text-fill: #a0aec0;"/>
                    </VBox>
                </HBox>
                
                <!-- Recent Activity -->
                <VBox styleClass="card" spacing="20" prefHeight="300">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Recent Activity" styleClass="card-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="View All" styleClass="link-button"/>
                    </HBox>
                    <TableView fx:id="activityTable" prefHeight="200">
                        <columns>
                            <TableColumn text="User" prefWidth="200"/>
                            <TableColumn text="Action" prefWidth="250"/>
                            <TableColumn text="Date" prefWidth="150"/>
                            <TableColumn text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
                
            </VBox>
            
            <!-- Users Management View -->
            <VBox fx:id="usersView" spacing="20" style="-fx-padding: 20;" visible="false">
                
                <!-- Users Header with Search and Filters -->
                <VBox styleClass="card" spacing="15">
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Users Management" styleClass="card-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="+ Add User" styleClass="primary-button" prefHeight="40" onAction="#handleAddUser"/>
                    </HBox>
                    
                    <!-- Search and Filter Row -->
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="searchField" promptText="Search by name, email, phone..." 
                                  styleClass="modern-text-field" prefWidth="350" prefHeight="45"/>
                        
                        <ComboBox fx:id="roleFilterComboBox" promptText="Filter by Role" 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="150"/>
                        
                        <ComboBox fx:id="statusFilterComboBox" promptText="Filter by Status" 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="150"/>
                        
                        <ComboBox fx:id="sortComboBox" promptText="Sort by..." 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="150"/>
                        
                        <Button text="Reset Filters" styleClass="secondary-button" 
                               prefHeight="45" onAction="#handleResetFilters"/>
                    </HBox>
                </VBox>
                
                <!-- Users Cards Grid -->
                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;"
                           VBox.vgrow="ALWAYS">
                    <FlowPane fx:id="usersCardsContainer" hgap="20" vgap="20" 
                             style="-fx-background-color: transparent; -fx-padding: 10;"/>
                </ScrollPane>
                
            </VBox>
            
            <!-- Abonnements View -->
            <VBox fx:id="abonnementsView" spacing="20" style="-fx-padding: 20;" visible="false">
                <VBox styleClass="card" spacing="15">
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Abonnements Management" styleClass="card-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="+ Add Abonnement" styleClass="primary-button" prefHeight="40" onAction="#handleAddAbonnement"/>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="abonSearchField" promptText="Search abonnements..." 
                                  styleClass="modern-text-field" prefWidth="350" prefHeight="45"/>
                        <ComboBox fx:id="abonTypeFilter" promptText="Filter by Type" 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="150"/>
                        <ComboBox fx:id="abonSortComboBox" promptText="Sort by..." 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="150"/>
                    </HBox>
                </VBox>
                
                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;"
                           VBox.vgrow="ALWAYS">
                    <FlowPane fx:id="abonnementsCardsContainer" hgap="20" vgap="20" 
                             style="-fx-background-color: transparent; -fx-padding: 10;"/>
                </ScrollPane>
            </VBox>
            
            <!-- Assurances View -->
            <VBox fx:id="assurancesView" spacing="20" style="-fx-padding: 20;" visible="false">
                <VBox styleClass="card" spacing="15">
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Assurances Management" styleClass="card-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="+ Add Assurance" styleClass="primary-button" prefHeight="40" onAction="#handleAddAssurance"/>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="assurSearchField" promptText="Search assurances..." 
                                  styleClass="modern-text-field" prefWidth="350" prefHeight="45"/>
                        <ComboBox fx:id="assurTypeFilter" promptText="Filter by Type" 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="180"/>
                        <ComboBox fx:id="assurStatusFilter" promptText="Filter by Status" 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="150"/>
                        <ComboBox fx:id="assurSortComboBox" promptText="Sort by..." 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="180"/>
                    </HBox>
                </VBox>
                
                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;"
                           VBox.vgrow="ALWAYS">
                    <FlowPane fx:id="assurancesCardsContainer" hgap="20" vgap="20" 
                             style="-fx-background-color: transparent; -fx-padding: 10;"/>
                </ScrollPane>
            </VBox>
            
            <!-- Contrats View -->
            <VBox fx:id="contratsView" spacing="20" style="-fx-padding: 20;" visible="false">
                <VBox styleClass="card" spacing="15">
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Contrats Management" styleClass="card-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="+ Add Contrat" styleClass="primary-button" prefHeight="40" onAction="#handleAddContrat"/>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="contratSearchField" promptText="Search contrats..." 
                                  styleClass="modern-text-field" prefWidth="350" prefHeight="45"/>
                        <ComboBox fx:id="contratStatusFilter" promptText="Filter by Status" 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="150"/>
                        <ComboBox fx:id="contratSortComboBox" promptText="Sort by..." 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="180"/>
                    </HBox>
                </VBox>
                
                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;"
                           VBox.vgrow="ALWAYS">
                    <FlowPane fx:id="contratsCardsContainer" hgap="20" vgap="20" 
                             style="-fx-background-color: transparent; -fx-padding: 10;"/>
                </ScrollPane>
            </VBox>
            
            <!-- Projets View -->
            <VBox fx:id="projetsView" spacing="20" style="-fx-padding: 20;" visible="false">
                <VBox styleClass="card" spacing="15">
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Projets Management" styleClass="card-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="+ Add Projet" styleClass="primary-button" prefHeight="40" onAction="#handleAddProjet"/>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="projetSearchField" promptText="Search projets..." 
                                  styleClass="modern-text-field" prefWidth="350" prefHeight="45"/>
                        <ComboBox fx:id="projetStatusFilter" promptText="Filter by Status" 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="150"/>
                        <ComboBox fx:id="projetSortComboBox" promptText="Sort by..." 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="180"/>
                    </HBox>
                </VBox>
                
                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;"
                           VBox.vgrow="ALWAYS">
                    <FlowPane fx:id="projetsCardsContainer" hgap="20" vgap="20" 
                             style="-fx-background-color: transparent; -fx-padding: 10;"/>
                </ScrollPane>
            </VBox>
            
            <!-- Investissements View -->
            <VBox fx:id="investissementsView" spacing="20" style="-fx-padding: 20;" visible="false">
                <VBox styleClass="card" spacing="15">
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Investissements Management" styleClass="card-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="+ Add Investissement" styleClass="primary-button" prefHeight="40" onAction="#handleAddInvestissement"/>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="invesSearchField" promptText="Search investissements..." 
                                  styleClass="modern-text-field" prefWidth="350" prefHeight="45"/>
                        <ComboBox fx:id="invesStatusFilter" promptText="Filter by Status" 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="150"/>
                        <ComboBox fx:id="invesSortComboBox" promptText="Sort by..." 
                                 styleClass="modern-combo-box" prefHeight="45" prefWidth="180"/>
                    </HBox>
                </VBox>
                
                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;"
                           VBox.vgrow="ALWAYS">
                    <FlowPane fx:id="investissementsCardsContainer" hgap="20" vgap="20" 
                             style="-fx-background-color: transparent; -fx-padding: 10;"/>
                </ScrollPane>
            </VBox>
            
        </StackPane>
        
    </VBox>
    
</StackPane>
